<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nhập số -->
    <EditText
        android:id="@+id/etNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/edit_text"
        android:hint="Nhập số"
        android:inputType="number"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Số lẻ -->
    <RadioButton
        android:id="@+id/rbLe"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Số lẻ"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/rbNguyenTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNumber" />

    <!-- Số nguyên tố -->
    <RadioButton
        android:id="@+id/rbNguyenTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Số nguyên tố"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbLe"
        app:layout_constraintEnd_toStartOf="@id/rbHoanHao"
        app:layout_constraintStart_toEndOf="@id/rbLe"
        app:layout_constraintTop_toTopOf="@id/rbLe" />

    <!-- Số hoàn hảo -->
    <RadioButton
        android:id="@+id/rbHoanHao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Số hoàn hảo"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbLe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rbNguyenTo"
        app:layout_constraintTop_toTopOf="@id/rbLe" />

    <!-- Số chẵn -->
    <RadioButton
        android:id="@+id/rbChan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="Số chẵn"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/rbChinhPhuong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbLe" />

    <!-- Số chính phương -->
    <RadioButton
        android:id="@+id/rbChinhPhuong"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Số chính phương"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbChan"
        app:layout_constraintEnd_toStartOf="@id/rbFibo"
        app:layout_constraintStart_toEndOf="@id/rbChan"
        app:layout_constraintTop_toTopOf="@id/rbChan" />

    <!-- Số Fibonacci -->
    <RadioButton
        android:id="@+id/rbFibo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Số Fibonacci"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbChan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rbChinhPhuong"
        app:layout_constraintTop_toTopOf="@id/rbChan" />

    <!-- Thông báo -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập số nguyên để xem kết quả"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/rbChan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hiển thị kết quả -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>